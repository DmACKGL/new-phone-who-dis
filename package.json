{
  "name": "npwd",
  "version": "0.1.0",
  "description": "A FiveM phone resource, made in React & TypeScript",
  "repository": "https://github.com/project-error/new-phone-who-dis",
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "@octokit/core": "^3.4.0",
    "husky": "^5.1.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "build": "lerna run build",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap",
    "format:staged": "pretty-quick --staged",
    "postinstall": "run-s postinstall:*",
    "postinstall:phone": "cd phone && yarn install",
    "postinstall:resource": "cd resources && yarn install",
    "postinstall:husky": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx run format:staged"
    }
  }
}
